<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#B3B3B3" /> <!-- shadow -->
                    <corners android:radius="5dp" />
                </shape>
            </item>
            <item
                android:bottom="3px"
                android:left="1px"
                android:right="1px"
                android:top="1px">
                <shape android:shape="rectangle">
                    <solid android:color="#F0F4F8" /> <!-- rectangle color -->
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
